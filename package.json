{
  "name": "@4c/selenium-sandbox",
  "version": "0.2.1",
  "main": "browser/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/selenium-sandbox.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    "babel": "babel src --ignore **/__tests__ --delete-dir-on-start -x .js,.ts,.tsx",
    "build:types": "tsc --emitDeclarationOnly --outDir lib",
    "build": "yarn babel -d lib && yarn build:types",
    "prepublishOnly": "yarn run build",
    "release": "rollout",
    "tdd": "jest --watch",
    "test": "yarn lint",
    "testonly": "jest",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{json,css,md}'",
    "import-sort": "import-sort '**/src/**/*.{js,ts,tsx}' '!**/__generated__/*' '!**/*.d.ts'",
    "lint": "tsc --noEmit && yarn eslint && yarn import-sort --list-different && yarn prettier --list-different",
    "format": "yarn eslint && yarn import-sort --write && yarn prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".js, .ts, .tsx": {
      "parser": "import-sort-style-4catalyzer/parser-ts",
      "style": "import-sort-style-4catalyzer"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "import-sort --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "node"
  },
  "release": {
    "publishDir": "lib",
    "conventionalCommits": true
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.2.4",
    "@4c/jest-preset": "^1.4.3",
    "@4c/rollout": "^2.1.0",
    "@4c/tsconfig": "^0.3.0",
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "babel-core": "^7.0.0-bridge.0",
    "eslint": "^6.8.0",
    "eslint-config-4catalyzer": "^1.0.1",
    "eslint-config-4catalyzer-jest": "^2.0.2",
    "eslint-config-4catalyzer-typescript": "^1.1.4",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-style-4catalyzer": "^4.3.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/fetch-mock": "^7.2.2",
    "@types/jest": "^24.0.0",
    "@types/selenium-webdriver": "^4.0.0",
    "@4c/fetch-mock": "^8.0.0",
    "selenium-webdriver": "^4.0.0-alpha.1"
  }
}
